<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:text="遊戲規則"
            android:id="@+id/gameRule_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="118dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="目前搜集"
                android:layout_below="@+id/gameRule_btn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="65dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/current_num5"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="50dp"
                android:text="萬" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/current_num4"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="10dp"
                android:text="千" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="百"
                android:id="@+id/current_num3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="65dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="十"
                android:id="@+id/current_num2"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="個"
                android:id="@+id/current_num1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="65dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="118dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="上期是否中獎"
                android:layout_marginTop="60dp"
                android:layout_below="@+id/textView"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginLeft="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/check_y_n"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="50dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="118dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="上期開獎號碼"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="64dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="第一期獎號尚未開"
                android:id="@+id/winning_num"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="64dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜尋頁面"
                android:id="@+id/toSearchPage_btn"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:visibility="gone" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兌獎"
                android:id="@+id/check_btn"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="150dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>