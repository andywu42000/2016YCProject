<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.jiarou.sharelove.VenderListFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_home01">


        <!--<include layout="@layout/toolbar"-->
                 <!--android:id="@+id/my_toolbar"/>-->


        <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/map1"
            android:layout_marginTop="0dp"
            android:background="@drawable/round01"
            android:layout_weight="0.08"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="383dp"
            android:layout_height="174dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round01"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/shpo_icon"
                    android:layout_marginLeft="100dp"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/noshop"
                    android:layout_marginLeft="10dp"
                    android:textSize="30dp"/>
            </LinearLayout>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:id="@+id/venderlist_view"
                android:layout_marginBottom="0dp"
                android:background="@drawable/round01"
                android:textSize="30px"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.19"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
