<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.jiarou.sharelove.VenderListFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_home01">


        <!--<include layout="@layout/toolbar"-->
                 <!--android:id="@+id/my_toolbar"/>-->


        <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/map1"
            android:layout_marginTop="0dp"
            android:background="@drawable/round01"
            android:layout_weight="0.08"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="383dp"
            android:layout_height="174dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round01">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/venderlist_view"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/round01"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/noshop"
                android:layout_weight="2.16"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
