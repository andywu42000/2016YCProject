<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.jiarou.sharelove.Game_areaFragment"
             android:id="@+id/game_area">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="503dp"
        android:layout_gravity="center_horizontal|top"
        android:weightSum="1"
        >

        <TextView
            android:layout_width="124dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="選擇縣市"
            android:id="@+id/textView18"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/spinner5"
            android:background="@drawable/round01"
            android:backgroundTint="#a6ebf3"
            android:layout_weight="0.44"/>

        <Spinner
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:layout_below="@+id/textView18"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="141dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="124dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="選擇地區"
            android:id="@+id/textView19"
            android:layout_below="@+id/spinner5"
            android:layout_alignEnd="@+id/spinner5"
            android:background="@drawable/round01"
            android:backgroundTint="#a6ebf3"/>

        <Spinner
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/area"
            android:layout_below="@+id/textView19"
            android:layout_alignEnd="@+id/spinner5"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:id="@+id/check"
            android:layout_weight="0.52"
            android:clickable="false"
            android:choiceMode="singleChoice"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:touchscreenBlocksFocus="false"
            android:contextClickable="false"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="開始遊戲"
            android:id="@+id/start"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</FrameLayout>
