<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listTextView"
        android:textSize="18dp"
        android:textColor="#212121"
        android:layout_toRightOf="@+id/listImageView"
        android:layout_marginTop="10dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/listImageView"
        android:layout_margin="10dp"
        app:riv_corner_radius = "20dp"
        app:riv_mutate_background="true"
        app:riv_tile_mode="repeat" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView14"
        android:layout_below="@+id/listTextView"
        android:layout_toEndOf="@+id/listImageView"
        android:layout_margin="5dp"
        android:src="@mipmap/phone"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView15"
        android:layout_below="@+id/imageView14"
        android:layout_toEndOf="@+id/listImageView"
        android:layout_margin="5dp"
        android:src="@mipmap/home"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/focusPhoneTextView"
        android:layout_toRightOf="@+id/imageView14"
        android:layout_alignTop="@+id/imageView14"
        android:layout_marginTop="5dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/focusAddressTextView"
        android:layout_alignTop="@+id/imageView15"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageView15"
        android:textSize="15dp" />

</RelativeLayout>